<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <TextView
        android:id="@+id/formula"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:hint="@string/_enter_numbers"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_margin="10dp"
        android:rowCount="5"
        android:columnCount="4"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formula"
        >

        <Button
            android:id="@+id/button1"
            android:layout_gravity="fill"
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_1"
            />
        <Button
            android:id="@+id/button2"
            android:layout_gravity="fill"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_2"
            />
        <Button
            android:id="@+id/button3"
            android:layout_gravity="fill"
            android:layout_column="2"
            android:layout_row="0"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_3"
            />
        <Button
            android:id="@+id/opAdd"
            android:layout_gravity="fill"
            android:layout_column="3"
            android:layout_row="0"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_plus"
            />
        <Button
            android:id="@+id/button4"
            android:layout_gravity="fill"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_4"
            />
        <Button
            android:id="@+id/button5"
            android:layout_gravity="fill"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_5"
            />
        <Button
            android:id="@+id/button6"
            android:layout_gravity="fill"
            android:layout_column="2"
            android:layout_row="1"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_6"
            />
        <Button
            android:id="@+id/opSubtract"
            android:layout_gravity="fill"
            android:layout_column="3"
            android:layout_row="1"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_minus"
            />
        <Button
            android:id="@+id/button7"
            android:layout_gravity="fill"
            android:layout_column="0"
            android:layout_row="2"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_7"
            />
        <Button
            android:id="@+id/button8"
            android:layout_gravity="fill"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_8"
            />
        <Button
            android:id="@+id/button9"
            android:layout_gravity="fill"
            android:layout_column="2"
            android:layout_row="2"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_9"
            />
        <Button
            android:id="@+id/opMultiply"
            android:layout_gravity="fill"
            android:layout_column="3"
            android:layout_row="2"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_star"
            />
        <Button
            android:id="@+id/button0"
            android:layout_gravity="fill"
            android:layout_column="0"
            android:layout_row="3"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_0"
            />
        <Button
            android:id="@+id/buttonDecimal"
            android:layout_gravity="fill"
            android:layout_column="1"
            android:layout_row="3"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_."
            />
        <Button
            android:id="@+id/blank1"
            android:layout_gravity="fill"
            android:layout_column="2"
            android:layout_row="3"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text=""
            />
        <Button
            android:id="@+id/opDivide"
            android:layout_gravity="fill"
            android:layout_column="3"
            android:layout_row="3"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_slash"
            />
        <Button
            android:id="@+id/buttonLeftP"
            android:layout_gravity="fill"
            android:layout_column="0"
            android:layout_row="4"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_left_p"
            />
        <Button
            android:id="@+id/buttonRightP"
            android:layout_gravity="fill"
            android:layout_column="1"
            android:layout_row="4"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_right_p"
            />
        <Button
            android:id="@+id/blank2"
            android:layout_gravity="fill"
            android:layout_column="2"
            android:layout_row="4"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text=""
            />
        <Button
            android:id="@+id/opSquare"
            android:layout_gravity="fill"
            android:layout_column="3"
            android:layout_row="4"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@string/_carrot"
            />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>